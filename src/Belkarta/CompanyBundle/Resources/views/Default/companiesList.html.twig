<div class="row">
    {% if items|length > 0 %}
        {% for item in items %}
            <div class="col-sm-10">
                <div class="company-title">
                    <a href="{{ path('belkarta_company', {id: item.id}) }}">{{ item.name }}</a>
                </div>
            </div>
            <div class="col-sm-1" style="font-size: 2em; color: #e86060">
                {{ item.percent }}%
            </div>
            <div style="margin-bottom: 15px; height: 250px;">
                <div class="col-sm-4" style="margin-bottom: 15px;">
                    {% if item.logo %}<a href="{{ path('belkarta_company', {id: item.id}) }}"><img src="{{ item.logo.image.path }}" title="Логотип {{ item.name }}" class="img-responsive img-thumbnail"></a>{% endif %}
                </div>
                <div class="col-sm-7">
                    {{ item.text|raw }}
                </div>
            </div>
        {% endfor %}
    {% else %}
        По вашему запросу пока нет компаний
    {% endif %}
    </div>
    <div class="clear"></div>
</div>