{% extends 'AppBundle::layout.html.twig' %}

{% block content %}
<h2 class="style1">БЕЛКАРТА "{% if type == 1 %}CLASSIC{% else %}PLATINUM{% endif %}"</h2>
<div class="row">
    <div class="col-sm-8">
        {{ publication.text|raw }}

        <br/>
        <br/>
    
        <a href="{{ path('belkarta_card_buy', {type: type}) }}" class="btn btn-danger btn-lg">ОФОРМИТЬ ЗАКАЗ</a>
    </div>
    <div class="col-sm-3">
        <div class="row">
            <div class="col-sm-12" style="margin-bottom: 5px;">
                {% if type == 1 %}
                    {% set type_name = 'classic' %}
                {% else %}
                    {% set type_name = 'platinum' %}
                {% endif %}
                <img src="{{ asset('bundles/belkartacard/images/' ~ type_name ~ '.jpg') }}"/>
            </div>
        </div>
    </div>
</div>
<div class="clear"></div>
{% endblock %}
